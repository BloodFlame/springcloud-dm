<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.dm.mapper.DmKeywordSortMapper">

    <select id="getDmKeywordSortById" resultType="cn.dm.pojo.DmKeywordSort">
        select
                id as id,
                keyword as keyword,
                count as count,
                createdTime as createdTime,
                updatedTime as updatedTime
        from dm_keyword_sort
        <trim prefix="where" prefixOverrides="and | or">
            <if test="id != null">
                and id=#{id}
            </if>
        </trim>
    </select>

    <select id="getDmKeywordSortListByMap" resultType="cn.dm.pojo.DmKeywordSort" parameterType="java.util.Map">
        select
                id as id,
                keyword as keyword,
                count as count,
                createdTime as createdTime,
                updatedTime as updatedTime
        from dm_keyword_sort
        <trim prefix="where" prefixOverrides="and | or">
                <if test="id != null and id!=''">
                    and id=#{id}
                </if>
                <if test="keyword != null and keyword!=''">
                    and keyword=#{keyword}
                </if>
                <if test="count != null and count!=''">
                    and count=#{count}
                </if>
                <if test="createdTime != null and createdTime!=''">
                    and createdTime=#{createdTime}
                </if>
                <if test="updatedTime != null and updatedTime!=''">
                    and updatedTime=#{updatedTime}
                </if>
        </trim>
        <if test="beginPos != null and pageSize != null ">
            limit #{beginPos},#{pageSize}
        </if>
    </select>

    <select id="getDmKeywordSortCountByMap" resultType="Integer"  parameterType="java.util.Map">
        select count(*) from dm_keyword_sort
        <trim prefix="where" prefixOverrides="and | or">
                <if test="id != null and id!=''">
                    and id=#{id}
                </if>
                <if test="keyword != null and keyword!=''">
                    and keyword=#{keyword}
                </if>
                <if test="count != null and count!=''">
                    and count=#{count}
                </if>
                <if test="createdTime != null and createdTime!=''">
                    and createdTime=#{createdTime}
                </if>
                <if test="updatedTime != null and updatedTime!=''">
                    and updatedTime=#{updatedTime}
                </if>
        </trim>
    </select>

    <insert id="insertDmKeywordSort" parameterType="cn.dm.pojo.DmKeywordSort">
        insert into dm_keyword_sort(
                        keyword,
                        count,
                        createdTime,
                        updatedTime)
        values(
                     #{keyword},
                     #{count},
                     #{createdTime},
                    #{updatedTime})
    </insert>

    <update id="updateDmKeywordSort" parameterType="cn.dm.pojo.DmKeywordSort">
        update dm_keyword_sort
        <trim prefix="set" suffixOverrides="," suffix="where id=#{id}">
                        <if test="keyword != null and keyword!=''">
                            keyword=#{keyword},
                        </if>
                        <if test="count != null and count!=''">
                            count=#{count},
                        </if>
                        <if test="createdTime != null and createdTime!=''">
                            createdTime=#{createdTime},
                        </if>
                        <if test="updatedTime != null and updatedTime!=''">
                            updatedTime=#{updatedTime}
                        </if>
        </trim>
    </update>
</mapper>