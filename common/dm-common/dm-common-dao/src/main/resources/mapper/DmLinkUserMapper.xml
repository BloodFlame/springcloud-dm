<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.dm.mapper.DmLinkUserMapper">

    <select id="getDmLinkUserById" resultType="cn.dm.pojo.DmLinkUser">
        select
                id as id,
                userId as userId,
                name as name,
                idCard as idCard,
                cardType as cardType,
                createdTime as createdTime,
                updatedTime as updatedTime
        from dm_link_user
        <trim prefix="where" prefixOverrides="and | or">
            <if test="id != null">
                and id=#{id}
            </if>
        </trim>
    </select>

    <select id="getDmLinkUserListByMap" resultType="cn.dm.pojo.DmLinkUser" parameterType="java.util.Map">
        select
                id as id,
                userId as userId,
                name as name,
                idCard as idCard,
                cardType as cardType,
                createdTime as createdTime,
                updatedTime as updatedTime
        from dm_link_user
        <trim prefix="where" prefixOverrides="and | or">
                <if test="id != null and id!=''">
                    and id=#{id}
                </if>
                <if test="userId != null and userId!=''">
                    and userId=#{userId}
                </if>
                <if test="name != null and name!=''">
                    and name=#{name}
                </if>
                <if test="idCard != null and idCard!=''">
                    and idCard=#{idCard}
                </if>
                <if test="cardType != null and cardType!=''">
                    and cardType=#{cardType}
                </if>
                <if test="createdTime != null and createdTime!=''">
                    and createdTime=#{createdTime}
                </if>
                <if test="updatedTime != null and updatedTime!=''">
                    and updatedTime=#{updatedTime}
                </if>
        </trim>
        <if test="beginPos != null and pageSize != null ">
            limit #{beginPos},#{pageSize}
        </if>
    </select>

    <select id="getDmLinkUserCountByMap" resultType="Integer"  parameterType="java.util.Map">
        select count(*) from dm_link_user
        <trim prefix="where" prefixOverrides="and | or">
                <if test="id != null and id!=''">
                    and id=#{id}
                </if>
                <if test="userId != null and userId!=''">
                    and userId=#{userId}
                </if>
                <if test="name != null and name!=''">
                    and name=#{name}
                </if>
                <if test="idCard != null and idCard!=''">
                    and idCard=#{idCard}
                </if>
                <if test="cardType != null and cardType!=''">
                    and cardType=#{cardType}
                </if>
                <if test="createdTime != null and createdTime!=''">
                    and createdTime=#{createdTime}
                </if>
                <if test="updatedTime != null and updatedTime!=''">
                    and updatedTime=#{updatedTime}
                </if>
        </trim>
    </select>

    <insert id="insertDmLinkUser" parameterType="cn.dm.pojo.DmLinkUser">
        insert into dm_link_user(
                        userId,
                        name,
                        idCard,
                        cardType,
                        createdTime,
                        updatedTime)
        values(
                     #{userId},
                     #{name},
                     #{idCard},
                     #{cardType},
                     #{createdTime},
                    #{updatedTime})
    </insert>

    <update id="updateDmLinkUser" parameterType="cn.dm.pojo.DmLinkUser">
        update dm_link_user
        <trim prefix="set" suffixOverrides="," suffix="where id=#{id}">
                        <if test="userId != null and userId!=''">
                            userId=#{userId},
                        </if>
                        <if test="name != null and name!=''">
                            name=#{name},
                        </if>
                        <if test="idCard != null and idCard!=''">
                            idCard=#{idCard},
                        </if>
                        <if test="cardType != null and cardType!=''">
                            cardType=#{cardType},
                        </if>
                        <if test="createdTime != null and createdTime!=''">
                            createdTime=#{createdTime},
                        </if>
                        <if test="updatedTime != null and updatedTime!=''">
                            updatedTime=#{updatedTime}
                        </if>
        </trim>
    </update>

</mapper>